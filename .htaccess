RewriteEngine On
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^([\~a-zA-Z0-9]*)\/?$ /~mamar/index.php?p=$1 [QSA,L]
RewriteRule ^([a-zA-Z0-9]*)\/([0-9]{1,4})\/?$ /~mamar/index.php?p=$1&id=$2 [QSA,L]
RewriteRule ^([a-zA-Z0-9]*)\/([0-9]{1,4})\/([a-zA-Z]*)?$ /~mamar/index.php?p=$1&id=$2&action=$3 [QSA,L]